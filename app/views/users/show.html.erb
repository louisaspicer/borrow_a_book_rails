<div class="container">
  <div class="row">
    <% if @user.books.any? %>
      <% @user.books.each do |book| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <% if book.image.url(:medium) %>
            <br>
            <%= image_tag book.image.url(:medium) %><br>
            <% else %>
            <br>
            <%= image_tag("placeholder.jpg") %><br>
            <% end %>
              <%= button_to "Edit", edit_book_path(book), class:"btn btn-info btn-md col-md-6", :method => :get %>
              <%= button_to "Delete", book_path(book), class:"btn btn-danger btn-md col-md-6", method: :delete, data: { confirm: "Are you sure?" } %><br>
            <div class="caption">
              <h3><%= link_to book.title, book_path(book) %></h3>
              <h4>by <%= book.author %></h4>
            </div>
          </div>
        </div>
        <% end %>
    <% else %>
      <p> You haven't added any books yet. </p>
    <% end %>
  </div>
</div>
